<section class="favorites">

<h1>My Courses</h1>
{{!-- <a href="/user">Back to homepage</a> --}}

<div class="favorites-course-list">




{{#each courses}}

<form action="/user/{{this.id}}/remove" method="POST">
<div class="img">
<a href="{{this.link}}">   
<img class="course-img" src="{{this.image}}" alt="course-img">
</a>
</div>



<div class="favorites-description">
<h2>{{this.name}}</h2>
<p>{{this.description}}</p>
</div>
<button class="remove-btn">Remove</button>
</form>
<hr>


{{/each}}

</div>
</section>

